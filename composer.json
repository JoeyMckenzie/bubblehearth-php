{
    "name": "joeymckenzie/openbrewerydb-php-api",
    "description": "An Open Brewery DB API for PHP.",
    "type": "library",
    "license": "MIT",
    "version": "0.1.0",
    "homepage": "https://github.com/joeymckenzie/openbrewerydb-php-api",
    "autoload": {
        "psr-4": {
            "OpenBrewery\\OpenBrewery\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Joey McKenzie",
            "email": "joey.mckenzie27@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.3",
        "guzzlehttp/guzzle": "^7.8",
        "league/oauth2-client": "^2.7",
        "symfony/serializer": "^6.3 || ^7.0",
        "symfony/property-access": "^6.3 || ^7.0",
        "doctrine/annotations": "^2.0",
        "nesbot/carbon": "^2.72",
        "illuminate/collections": "^10.37"
    },
    "require-dev": {
        "pestphp/pest": "^2.32",
        "laravel/pint": "^1.13",
        "pestphp/pest-plugin-type-coverage": "^2.8",
        "pestphp/pest-plugin-watch": "^2.0",
        "phpstan/phpstan": "^1.10"
    },
    "scripts": {
        "test": "./vendor/bin/pest",
        "test:watch": "./vendor/bin/pest --watch",
        "lint": "./vendor/bin/phpstan analyse src tests",
        "fmt": "./vendor/bin/pint -v",
        "check": "./vendor/bin/pint --test",
        "prepare": "git config core.hookspath .githooks",
        "types": "./vendor/bin/pest --type-coverage --min=100",
        "ci": "composer run check && composer run lint && composer run types && composer run test"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
